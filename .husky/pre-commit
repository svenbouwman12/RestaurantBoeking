#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Only check for critical syntax errors, not styling
echo "📝 Checking for critical syntax errors..."
cd client

# Run build to catch any real syntax errors
echo "🔨 Running build check..."
if ! npm run build; then
  echo "❌ Build failed! Please fix the syntax errors before committing."
  exit 1
fi

echo "✅ Build successful! Safe to commit."