#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check for duplicate declarations and syntax errors
echo "🔍 Checking for duplicate declarations and syntax errors..."

# Run the fix-duplicates script
if ! ./fix-duplicates.sh; then
  echo "❌ Duplicate declarations or build errors detected!"
  echo "Please fix the issues before committing."
  exit 1
fi

echo "✅ All checks passed! Proceeding with commit."