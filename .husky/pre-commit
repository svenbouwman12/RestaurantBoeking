#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Check for syntax errors in TypeScript/JavaScript files
echo "ğŸ“ Checking syntax errors..."
cd client

# Run linting
if ! npm run lint; then
  echo "âŒ Linting failed! Please fix the errors before committing."
  exit 1
fi

# Run build to catch any syntax errors
echo "ğŸ”¨ Running build check..."
if ! npm run build; then
  echo "âŒ Build failed! Please fix the errors before committing."
  exit 1
fi

echo "âœ… All checks passed! Safe to commit."