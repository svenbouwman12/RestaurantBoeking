#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Clean unused imports and check for errors
echo "🧹 Cleaning unused imports and checking for errors..."

# Run the clean-unused script
if ! ./clean-unused.sh; then
  echo "❌ Build errors detected!"
  echo "Please fix the issues before committing."
  exit 1
fi

echo "✅ All checks passed! Proceeding with commit."